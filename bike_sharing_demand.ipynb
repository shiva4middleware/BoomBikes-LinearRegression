df['season'] = df['season'].replace({1: 'spring', 2: 'summer', 3: 'fall', 4: 'winter'})
df['weathersit'] = df['weathersit'].replace({1: 'clear', 2: 'mist', 3: 'light_rain', 4: 'heavy_rain'})

# Convert categorical columns to dummy variables
